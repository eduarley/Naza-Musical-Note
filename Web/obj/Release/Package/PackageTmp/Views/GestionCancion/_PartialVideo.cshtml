
<style>
    .iframe-container {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%;
        height: 0;
    }

        .iframe-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>



@if (ViewBag.Link != null)
{

    using (Html.BeginForm("Save", "GestionCancion", new { Id = ViewBag.Id, Link = ViewBag.Link }, FormMethod.Post))
    {
        <div class="iframe-container">
            <iframe width="560"
                    height="315"
                    src="@ViewBag.Link"
                    frameborder="0">
                Hubo un problema al cargar el video.
            </iframe>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success" id="verificarEnlace" style="float: right;">Guardar</button>
        </div>

    }


}
else
{
    <span class="right badge badge-danger">Error al cargar video</span>
}