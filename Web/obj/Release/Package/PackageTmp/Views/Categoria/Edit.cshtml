@model Infraestructure.Models.Categoria
@{
    ViewBag.Title = "Editar Categoría";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>EDITAR CATEGORÍA</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Categoria")">Categoría</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


@using (Html.BeginForm("Save", "Categoria", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <center>
        <div class="card card-default mt-3 col-md-8">
            <div class="card-body p-3 col-md-12">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row text-left">
                    <div class="col-md-12">
                        <div class="form-group ">
                            <strong class="text-danger">*</strong>
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "custom-control-input", id = "customSwitch3", @type = "checkbox" } })
                                <label class="custom-control-label" for="customSwitch3">Estado</label>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="card-footer text-danger text-left border-bottom-0">
                    <p>* Campos requeridos</p>
                    <div style="float:right">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </center>




}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        //AQUI PARA PONER ACTIVO EL NAV-LINK, PONERSE EN CADA PAGINA
        $(document).ready(function () {
            $("#mantenimientos").addClass('active');
            $("#menucategorias").addClass('active');

        });

    </script>
}

