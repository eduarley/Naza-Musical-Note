@model Infraestructure.Models.Categoria
@{
    ViewBag.Title = "Detalles Categoría";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Categoria")">Categoría</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Html.DisplayNameFor(model => model.Descripcion)</h3>
            <br />
            <h3> @Html.DisplayFor(model => model.Descripcion)</h3>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                    <h3 class="text-primary">@Html.DisplayName("Puestos vinculados")</h3>
                    @if (Model.Puesto.Count > 0)
                    {
                        foreach (var item in Model.Puesto)
                        {
                            <p>@item.Descripcion</p>
                        }

                    }
                    else
                    {
                        <span class="right badge badge-warning">No existen puestos vinculados a esta categoría.</span>
                    }
                </div>
                <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2 text-justify">
                   
                    <div class="text-muted">
                        <p class="text-sm">
                            @Html.DisplayName("Id: ")
                            <b>@Html.DisplayFor(model => model.Id)</b>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="float-right">
                    <a class="btn btn-info btn-sm mr-1" href="@Url.Action("Edit","Categoria", new { id = Model.Id })">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Editar
                    </a>
                </div>

            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->