@model Infraestructure.Models.Cancion
@{ ViewBag.Title = "Detalles Canción"; }
@{ Infraestructure.Models.Usuario UsuarioLogueado = (Infraestructure.Models.Usuario)Session["User"]; }
<style>
    .iframe-container {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%;
        height: 0;
    }

        .iframe-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>CONSULTAR CANCIÓN</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Cancion")">Canciones</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">

    <!-- Default box -->
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">@Html.DisplayNameFor(model => model.Nombre)</h3>
            <br />
            <h3> @Html.DisplayFor(model => model.Nombre)</h3>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">

                    @if (ViewBag.UrlFormat != "")
                    {
                <div class="iframe-container">
                    <iframe width="560"
                            height="315"
                            src="@ViewBag.UrlFormat"
                            frameborder="0">
                        Hubo un problema al cargar el video.
                    </iframe>
                    <p>Video de la versión.</p>
                </div> }
            else
            {
                <span class="right badge badge-warning">No se ha ingresado un enlace para la versión.</span>
                                <br />
                                                <br /> if (UsuarioLogueado.IdRol == 1)
                                                                {
                                                                    <a href="@Url.Action("Gestion","GestionCancion", Model)">Agregar versión <i class="fas fa-external-link-alt ml-3"></i></a>
                                                                }

                                                            }



                </div>
                <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2 text-justify">

                    <div class="text-muted">
                        <p class="text-sm">
                            @Html.DisplayNameFor(model => model.Autor)
                            <b class="d-block">@Html.DisplayFor(model => model.Autor)</b>
                        </p>
                        <p class="text-sm">
                            @Html.DisplayNameFor(model => model.Genero)
                            <b class="d-block">@Html.DisplayFor(model => model.Genero)</b>
                        </p>
                        <p class="text-sm">
                            @Html.DisplayNameFor(model => model.Tonalidad)
                            <b class="d-block">@Html.DisplayFor(model => model.Tonalidad)</b>
                        </p>
                        <p class="text-sm">
                            @Html.DisplayNameFor(model => model.Fecha_creacion)
                            <b class="d-block">@Html.DisplayFor(model => model.Fecha_creacion)</b>
                        </p>
                        <p class="text-sm">
                            @Html.DisplayNameFor(model => model.Estado)
                            @if (Model.Estado)
                            {
                <b class="d-block">Activo</b> }
            else
            {
<b class="d-block">Inactivo</b>}

                        </p>
                    </div>


                </div>
            </div>
            @if (UsuarioLogueado.IdRol == 1)
            {
<div class="float-right">
    <a class="btn btn-primary btn-sm mr-1" href="@Url.Action("Edit","Cancion", new { id = Model.Id })">
        <i class="fas fa-pencil-alt">
        </i>
        Editar
    </a>
</div>}



        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts {

    <script>
        //AQUI PARA PONER ACTIVO EL NAV-LINK, PONERSE EN CADA PAGINA
        $(document).ready(function () {
            $("#mantenimientos").addClass('active');
            $("#menucancion").addClass('active');

        });

    </script>
}