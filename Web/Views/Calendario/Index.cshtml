                        <!-- your steps content here -->
                        <div id="logins-part"
                             class="content fade"
                             role="tabpanel"
                             aria-labelledby="logins-part-trigger">

                            <div class="col-md-12 ">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <input type="hidden" id="hdEventID" value="0" />
                                                <div class="form-group">
                                                    <label>Título</label>
                                                    <input type="text" id="txtSubject" class="form-control" name="titulo" />
