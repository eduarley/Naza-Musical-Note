@model Infraestructure.Models.Puesto

@{
    ViewBag.Title = "Details";
}

@{ Infraestructure.Models.Usuario UsuarioLogueado = (Infraestructure.Models.Usuario)Session["User"]; }

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Puesto")">Puestos</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<div class="content">
    <!--<h4>Usuario</h4>-->
    <hr />
    <div class="row justify-content-md-centers">
        <div class="col-md-2" style="font-weight:bold">
            @Html.DisplayNameFor(model => model.IdCategoria)
        </div>

        <div class="col-md-8">
            @Html.DisplayFor(model => model.Categoria.Descripcion)
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-2" style="font-weight:bold">
            @Html.DisplayNameFor(model => model.Descripcion)
        </div>

        <div class="col-md-8">
            @Html.DisplayFor(model => model.Descripcion)
        </div>
    </div>
</div>
<br />
<br />
<hr />
<p>
    @{
        if (UsuarioLogueado.Rol.Descripcion != "Integrante")
        {
            <a class="btn btn-primary" href="@Url.Action("Edit", "Puesto", new { id = Model.Id })" role="button"><i class="fas fa-edit"></i>  Editar</a> <strong> | </strong>
        }
    }


    <a class="btn btn-warning" href="@Url.Action("Index", "Puesto")" role="button"><i class="fas fa-arrow-alt-circle-up"></i>  Volver</a>
</p>
