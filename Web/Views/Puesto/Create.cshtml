@model Infraestructure.Models.Puesto

@{ ViewBag.Title = "Nuevo Puesto"; }

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Puesto")">Puestos</a></li>
                    <li class="breadcrumb-item active">Nuevo</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


@using (Html.BeginForm("Save", "Puesto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <center>
        <div class="card card-default mt-3 col-md-8">
            <div class="card-body p-3 col-md-12">
                <div class="card-header text-danger text-left border-bottom-0">
                    <p>* Campos requeridos</p>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row text-left">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <strong class="text-danger">*</strong>
                            @Html.LabelFor(model => model.IdCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.IdCategoria, new SelectList(ViewBag.Categoria, "Id", "Descripcion"), htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <strong class="text-danger">*</strong>
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

               
                        <div class="modal-footer justify-content-end">
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </center>
    
}


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    //AQUI PARA PONER ACTIVO EL NAV-LINK, PONERSE EN CADA PAGINA
        $(document).ready(function () {
            $("#mantenimientos").addClass('active');
            $("#menupuestos").addClass('active');
        });</script>

    $(function () {
    $('[data-toggle="tooltip"]').tooltip()
    })
}