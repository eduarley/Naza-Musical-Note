@model IEnumerable<Infraestructure.Models.Puesto>

@{
    ViewBag.Title = "Index";

}
@section Styles{
    @Styles.Render("~/Content/datatable")

}

@{ Infraestructure.Models.Usuario UsuarioLogueado = (Infraestructure.Models.Usuario)Session["User"]; }

<head>
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/Content/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
</head>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item active">Puestos</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

@{
    if (UsuarioLogueado.Rol.Descripcion != "Integrante")
    {
        <p>
            <a class="btn btn-primary" href="@Url.Action("Create","Puesto")">
                <i class="fa fa-plus"></i>
                Nuevo Puesto
            </a>
        </p>
    }
}



<div id="#mensaje"></div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Categoria.Descripcion)
                                    </th>
                                    <th class="notexport" style="text-align:center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
                                        </td>

                                        <td class="text-center ">
                                            <ul style="display:flex; list-style:none">
                                                <li>
                                                    <a class="btn btn-info btn-sm mr-1" href="@Url.Action("Details", "Puesto", new { id = item.Id })">
                                                        <i class="fas fa-eye">
                                                        </i>
                                                    </a>
                                                </li>
                                                @{
                                                    if (UsuarioLogueado.Rol.Descripcion != "Integrante")
                                                    {
                                                        <li>
                                                            <a class="btn btn-primary btn-sm mr-1" href="@Url.Action("Edit", "Puesto", new { id = item.Id })">
                                                                <i class="fas fa-pencil-alt">
                                                                </i>
                                                            </a>
                                                        </li>
                                                        }
                                                    }

                                                    @{
                                                        if (UsuarioLogueado.Rol.Descripcion != "Integrante")
                                                        {
                                                            <li>
                                                                <a id="botonEliminar" class="btn btn-danger btn-sm" onclick="eliminar(@item.Id)" href="#">
                                                                    <i class="fas fa-trash">
                                                                    </i>
                                                                </a>
                                                            </li>
                                                        }
                                                    }
                                                </ul>
                                            </td>
                                        </tr>
                                                }
                                            </tbody>
                                        </table>



                                        <input type="hidden" id="campoOculto" />



                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->

                <input type="hidden" id="campoOculto" />


                @section scripts {
                    @Scripts.Render("~/bundles/datatable")
                    <script src="~/Content/plugins/sweetalert2/sweetalert2.min.js"></script>

                    <script>
    // Habilita los tooltips
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    $(document).ready(function () {

        // Recibe los parámetros del Controller
                var option = '@TempData["Action"]'
                var message = '@TempData["MessageError"]'



                if (option == 'S') {
                    Swal.fire('Éxito!',
                        'El puesto fue creado correctamente.',
                        'success');
                }


                 if (option == 'D') {
                     Swal.fire('Éxito!',
                         'El puesto fue borrado correctamente.',
                         'success');
                }


                 if (option == 'U') {
                     Swal.fire('Éxito!',
                         'El puesto fue actualizado correctamente.',
                         'success');
                }

            if (option == 'E') {
                Swal.fire('Error!',
                    'Se ha producido un error: '+ message,
                    'error');
            }

    });
                    </script>

                    <script>
                        $(function () {
                            $("#example1").DataTable({
                                "language": {
                                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                                },
                                dom: 'Bfrtip',
                                //poner clase notexport a la columnas que no queremos en las exportaciones
                                buttons: [
                                    {
                                        extend: 'copy',
                                        text: 'Copiar',
                                        className: 'btn btn-default',
                                        exportOptions: {
                                            columns: ':not(.notexport)'
                                        }
                                    },
                                    {
                                        extend: 'csv',
                                        text: 'CSV',
                                        className: 'btn btn-default',
                                        exportOptions: {
                                            columns: ':not(.notexport)'
                                        }
                                    },
                                    {
                                        extend: 'excel',
                                        text: 'Excel',
                                        className: 'btn btn-default',
                                        exportOptions: {
                                            columns: ':not(.notexport)'
                                        }
                                    },
                                    {
                                        extend: 'pdf',
                                        text: 'PDF',
                                        className: 'btn btn-default',
                                        exportOptions: {
                                            columns: ':not(.notexport)'
                                        }
                                    },
                                    {
                                        extend: 'print',
                                        text: 'Imprimir',
                                        className: 'btn btn-default',
                                        exportOptions: {
                                            columns: ':not(.notexport)'
                                        }
                                    }

                                ],

                                "responsive": true, "lengthChange": false, "autoWidth": false,


                            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

                        });
                    </script>

                    <script>

                        //AQUI PARA PONER ACTIVO EL NAV-LINK, PONERSE EN CADA PAGINA
                        $(document).ready(function () {
                            $("#menupuestos").addClass('active');
                            $("#mantenimientos").addClass('active');
                        });

                    </script>

                    <script>
                        function eliminar(id) {
                            Swal.fire({
                                title: 'Estás seguro?',
                                text: "No podrás revertirlo!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Sí, bórralo!',
                                cancelButtonText: 'Cancelar'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $.ajax({
                                        type: "POST",
                                        url: '/Puesto/Delete',
                                        data: { 'id': id },
                                        success: function (data) {

                                            location.reload();
                                        },
                                        error: function (xhr, status, error) {
                                            location.reload();
                                        }
                                    })


                                }
                            })
                        }

                    </script>

                    <script>
                        function desactivarBotonEliminar() {
                            document.getElementById("botonEliminar").setAttribute("disabled", "false");
                        }

                        function activarBotonEliminar() {
                            document.getElementById("botonEliminar").setAttribute("disabled", "true");
                        }
                    </script>
                }
